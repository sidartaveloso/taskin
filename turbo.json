{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local"],
  "globalEnv": ["NODE_ENV", "PORT"],
  "tasks": {
    "install": {
      "cache": true,
      "dependsOn": [],
      "inputs": [
        "package.json",
        "pnpm-lock.yaml",
        "packages/*/package.json",
        "packages/*/pyproject.toml",
        "packages/*/uv.lock"
      ],
      "outputs": ["node_modules/**", ".venv/**"]
    },
    "@opentask/taskin#build": {
      "outputs": []
    },
    "@taskin/chatbot#build": {
      "outputs": []
    },
    "@taskin/directus-extension#build": {
      "outputs": []
    },
    "@taskin/docs#build": {
      "outputs": ["content/.vitepress/dist/**"]
    },
    "@taskin/n8n-plugin#build": {
      "outputs": []
    },
    "@taskin/py-sdk#build": {
      "outputs": []
    },
    "@taskin/types-py#publish:pypi": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "build": {
      "dependsOn": ["install", "^build"],
      "inputs": ["src/**/*.{ts,js,tsx,jsx}", "package.json", "tsconfig.json"],
      "outputs": [
        "dist/**",
        "build/**",
        "generated/**",
        "content/.vitepress/dist/**"
      ]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["install"],
      "persistent": true
    },
    "format": {
      "dependsOn": ["install"],
      "inputs": ["src/**/*.{ts,js,tsx,jsx,json}", "package.json"],
      "outputs": []
    },
    "format:check": {
      "dependsOn": ["install"],
      "inputs": ["src/**/*.{ts,js,tsx,jsx,json}", "package.json"],
      "outputs": []
    },
    "generate": {
      "dependsOn": ["^generate:schemas"],
      "outputs": ["generated/**"]
    },
    "generate:schemas": {
      "dependsOn": [],
      "outputs": ["dist/schema/**"]
    },
    "lint": {
      "dependsOn": ["install"],
      "inputs": ["src/**/*.{ts,js,tsx,jsx}", "package.json", "tsconfig.json"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["install"],
      "inputs": ["src/**/*.{ts,js,tsx,jsx}", "package.json", "tsconfig.json"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["install", "build"],
      "inputs": [
        "src/**/*.{ts,js,tsx,jsx}",
        "**/*.test.{ts,js}",
        "package.json"
      ],
      "outputs": ["coverage/**", ".turbo/**"]
    },
    "test:coverage": {
      "dependsOn": ["install", "build"],
      "inputs": [
        "src/**/*.{ts,js,tsx,jsx}",
        "**/*.test.{ts,js}",
        "package.json"
      ],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["install"],
      "inputs": ["src/**/*.{ts,tsx}", "package.json", "tsconfig.json"],
      "outputs": []
    }
  }
}
