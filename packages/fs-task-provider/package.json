{
  "name": "@taskin/fs-task-provider",
  "version": "0.1.0",
  "private": true,
  "motivation": "To provide a file-system-based implementation for task storage.",
  "solve": "Reads and writes task data from and to markdown files in the `TASKS` directory.",
  "scope": "internal",
  "status": "active",
  "since": "2025-11-05",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage .turbo",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@taskin/task-manager": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.5.3"
  }
}
