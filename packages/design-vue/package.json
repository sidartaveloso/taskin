{
  "name": "@opentask/taskin-design-vue",
  "version": "0.1.0",
  "description": "Vue 3 design system components for Taskin - including the official mascot and UI elements",
  "motivation": "Provide a reusable, well-documented Vue 3 component library featuring the Taskin mascot with animations, expressions, and interactive features for task management UIs",
  "solve": "Standardizes Taskin mascot implementation across projects, provides ready-to-use Vue components with Storybook documentation, and enables facial tracking features",
  "scope": "Vue 3 component library with Taskin mascot, atomic design components, Storybook stories, and MediaPipe facial tracking integration",
  "status": "active",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "storybook dev -p 6007",
    "dev:vite": "vite",
    "build": "vite build && vue-tsc --emitDeclarationOnly",
    "build:storybook": "storybook build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6007",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint . --fix",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "taskin",
    "design-system",
    "vue3",
    "components",
    "mascot",
    "ui"
  ],
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/vue3": "^10.1.10",
    "@storybook/vue3-vite": "^10.1.10",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "eslint-plugin-storybook": "^10.1.10",
    "eslint-plugin-vue": "^10.6.2",
    "jsdom": "^25.0.1",
    "playwright": "^1.57.0",
    "storybook": "^10.1.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^6.4.1",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^4.0.16",
    "vue": "^3.5.26",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.2.12"
  },
  "dependencies": {
    "@mediapipe/tasks-vision": "0.10.22-rc.20250304"
  }
}
