{
  "name": "taskin",
  "version": "0.1.0",
  "description": "Task management system integrated with Git workflows",
  "motivation": "Provide a CLI tool for task management integrated with Git workflows",
  "solve": "Simplifies task tracking and management directly from the command line",
  "scope": "cli",
  "status": "active",
  "since": "2025-11-06",
  "keywords": [
    "task",
    "management",
    "git",
    "workflow",
    "cli",
    "productivity",
    "task-tracker",
    "project-management",
    "developer-tools",
    "taskin"
  ],
  "homepage": "https://opentask.com.br",
  "bugs": {
    "url": "https://github.com/opentask-app/taskin/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opentask-app/taskin.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "author": {
    "name": "OpenTask",
    "email": "contato@opentask.com.br",
    "url": "https://opentask.com.br"
  },
  "contributors": [
    {
      "name": "Sidarta Veloso",
      "email": "sidartaveloso@gmail.com"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "taskin": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist coverage .turbo",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "inquirer": "^12.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "eslint": "^9.39.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  }
}
