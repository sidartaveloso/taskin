{
  "name": "taskin",
  "version": "2.0.2",
  "description": "Task management system integrated with Git workflows",
  "motivation": "Provide a CLI tool for task management integrated with Git workflows",
  "solve": "Simplifies task tracking and management directly from the command line",
  "scope": "cli",
  "status": "active",
  "since": "2025-11-06",
  "keywords": [
    "task",
    "management",
    "git",
    "workflow",
    "cli",
    "productivity",
    "task-tracker",
    "project-management",
    "developer-tools",
    "taskin",
    "security",
    "zod",
    "validation",
    "injection-prevention",
    "xss-protection"
  ],
  "homepage": "https://opentask.com.br",
  "bugs": {
    "url": "https://github.com/sidartaveloso/taskin/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidartaveloso/taskin.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "author": {
    "name": "OpenTask",
    "email": "contato@opentask.com.br",
    "url": "https://opentask.com.br"
  },
  "contributors": [
    {
      "name": "Sidarta Veloso",
      "email": "sidartaveloso@gmail.com"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "taskin": "dist/index.js"
  },
  "files": [
    "dist",
    "dashboard-dist",
    "sounds",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run build:dashboard && tsup",
    "build:dashboard": "cd ../dashboard && pnpm run build:app && cd ../cli && rm -rf dashboard-dist && cp -r ../dashboard/dist-app dashboard-dist",
    "clean": "rm -rf dist dashboard-dist coverage .turbo test-temp-e2e",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:e2e": "pnpm build && vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentask/taskin-file-system-provider": "^2.0.0",
    "@opentask/taskin-git-utils": "^2.0.0",
    "@opentask/taskin-task-manager": "^1.0.5",
    "@opentask/taskin-task-server-mcp": "^0.1.1",
    "@opentask/taskin-task-server-ws": "^0.1.0",
    "@opentask/taskin-types": "^1.0.5",
    "@opentask/taskin-utils": "^1.0.5",
    "@types/express": "^5.0.5",
    "@types/inquirer": "^9.0.9",
    "@types/play-sound": "^1.1.2",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "express": "^4.21.2",
    "inquirer": "^12.11.0",
    "play-sound": "^1.1.6",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "eslint": "^9.39.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  }
}
