{
  "name": "@opentask/taskin-file-system-provider",
  "version": "2.0.1",
  "description": "File system task provider for Taskin",
  "type": "module",
  "motivation": "To provide a file-system-based implementation for task storage.",
  "solve": "Reads and writes task data from and to markdown files in the `TASKS` directory.",
  "scope": "provider",
  "status": "active",
  "since": "2025-11-05",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "taskin",
    "provider",
    "filesystem",
    "markdown",
    "task-management"
  ],
  "author": {
    "name": "OpenTask",
    "email": "contato@opentask.com.br",
    "url": "https://opentask.com.br"
  },
  "contributors": [
    {
      "name": "Sidarta Veloso",
      "email": "sidartaveloso@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidartaveloso/taskin.git",
    "directory": "packages/file-system-task-provider"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage .turbo",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentask/taskin-git-utils": "workspace:*",
    "@opentask/taskin-task-manager": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
