{
  "name": "@opentask/taskin-git-utils",
  "version": "0.1.0",
  "private": true,
  "motivation": "To provide a set of utilities for interacting with Git repositories.",
  "solve": "Encapsulates Git logic, making it reusable for other packages like the CLI.",
  "scope": "internal",
  "status": "active",
  "since": "2025-11-05",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage .turbo",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "typescript": "^5.5.3"
  }
}
