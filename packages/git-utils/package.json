{
  "name": "@opentask/taskin-git-utils",
  "version": "2.0.1",
  "description": "Git utilities for Taskin task management",
  "type": "module",
  "motivation": "To provide a set of utilities for interacting with Git repositories.",
  "solve": "Encapsulates Git logic, making it reusable for other packages like the CLI.",
  "scope": "internal",
  "status": "active",
  "since": "2025-11-05",
  "keywords": [
    "taskin",
    "git",
    "utilities",
    "task-management"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidartaveloso/taskin.git",
    "directory": "packages/git-utils"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage .turbo",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentask/taskin-types": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
