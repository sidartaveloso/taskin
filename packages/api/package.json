{
  "name": "@taskin/api",
  "version": "1.0.6",
  "private": true,
  "type": "module",
  "motivation": "To provide a dedicated API layer for Taskin.",
  "solve": "Decouples the frontend and other clients from the core business logic, allowing for multiple interfaces (e.g., HTTP, gRPC).",
  "scope": "api",
  "status": "planned",
  "since": "2025-11-05",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage .turbo",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo 'No tests for api yet'",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentask/taskin-core": "workspace:*"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  }
}
