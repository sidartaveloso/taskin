{
  "name": "taskin-monorepo",
  "private": true,
  "type": "module",
  "version": "1.0.12",
  "description": "Taskin monorepo for task management and automation",
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.26.1"
  },
  "author": {
    "name": "OpenTask",
    "url": "https://opentask.com.br"
  },
  "contributors": [
    {
      "name": "Sidarta Veloso",
      "github": "https://github.com/sidartaveloso",
      "gitlab": "https://gitlab.com/sidartaveloso",
      "linkedin": "https://www.linkedin.com/in/sidartaveloso"
    }
  ],
  "scripts": {
    "lint:manifests": "tsx dev/scripts/lint-manifests.ts",
    "lint:tasks": "tsx dev/scripts/lint-tasks.ts",
    "lint": "turbo run lint && pnpm run lint:manifests && pnpm run lint:tasks",
    "lint:fix": "turbo run lint:fix",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "format": "run-p format:root format:turbo",
    "format:turbo": "turbo run format",
    "format:root": "prettier --write \"./*.{js,ts,tsx,jsx,vue,md,json,css,scss,html}\" \"./TASKS/**/*.md\" \"./dev/**/*.ts\"",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "ci": "pnpm typecheck && pnpm lint && pnpm test",
    "clean": "turbo run clean",
    "pnpm:update": "pnpm install pnpm@latest -Dw",
    "generate:py-types": "pnpm --filter @taskin/types-py run generate",
    "taskin": "tsx packages/cli/src/index.ts",
    "sync:versions": "node scripts/sync-versions.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "publish:packages": "node scripts/publish-packages.js",
    "publish:beta": "node scripts/publish-packages.js --tag beta",
    "publish:latest": "node scripts/publish-packages.js --tag latest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "globals": "^16.5.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
